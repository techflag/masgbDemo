<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvCourseType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="课程类型："
                android:textSize="@dimen/selectCourseHeadFontSize" />

            <Spinner
                android:id="@+id/spCourseType"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvKeyWords"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="关键字搜索："
                android:textSize="@dimen/selectCourseHeadFontSize" />

            <EditText
                android:id="@+id/contentET"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/selectCourseHeadFontSize" />

            <Button
                android:id="@+id/searchBT"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_login_button2"
                android:text="搜索"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/selectCourseHeadFontSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="5"
            android:gravity="center_vertical" >

            <ListView
                android:id="@+id/selectCourseLV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_box2"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/bg_curriculm_line_h"
                android:fadingEdge="none"
                android:listSelector="#00000000" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1.3"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pageSelectCourseBtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_normal"
                android:clickable="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/upSelectCourseBtn"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_login_button"
                android:gravity="center_horizontal|center_vertical"
                android:text="上一页"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/nextSelectCourseBtn"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/bg_login_button"
                android:gravity="center_horizontal|center_vertical"
                android:text="下一页"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>