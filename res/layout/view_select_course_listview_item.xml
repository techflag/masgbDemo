<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCourseItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvCourseType"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.9"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="选修"
        android:textSize="@dimen/courseListFontSize"
         />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCourseStyle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.6"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="三中全会"
         android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="5.6"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="十八届三中全会公报解读---"
         android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCoursePerson"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.3"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:singleLine="true"
        android:text="王雍君"
         android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCourseScore"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.9"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="2.0"
         android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:id="@+id/btnCourseIntroduce"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.6"
        android:background="@drawable/bg_login_button2"
        android:focusable="false"
        android:singleLine="true"
        android:text="课程介绍"
        android:textColor="#FFFFFF"
         android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:id="@+id/btnCourseChoose"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.6"
        android:background="@drawable/bg_login_button2"
        android:focusable="false"
        android:singleLine="true"
        android:text="选修课程"
        android:textColor="#FFFFFF"
         android:textSize="@dimen/courseListFontSize" />
    <!--
    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />
   
    <Button
        android:id="@+id/btnCourseAsk"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:focusable="false"
        android:singleLine="true"
        android:text="咨询答疑"
        android:textSize="15dip" />
    -->

</LinearLayout>