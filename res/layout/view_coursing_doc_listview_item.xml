<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCourseItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3.8"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="课件名称"
        android:textSize="@dimen/courseDocListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCourseStatus"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="状态"
        android:textSize="@dimen/courseDocListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:focusable="false"
        android:id="@+id/btnCourseDocLearn"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:background="@drawable/bg_login_button2"
        android:layout_gravity="center_vertical"
        android:text="在线学习"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/courseDocListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:focusable="false"
        android:id="@+id/btnCourseDocLearnLocal"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:background="@drawable/bg_login_button2"
        android:layout_gravity="center_vertical"
        android:text="离线学习"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/courseDocListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:focusable="false"
        android:id="@+id/btnCourseDocDownLoad"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:background="@drawable/bg_login_button2"
        android:layout_gravity="center_vertical"
        android:text="视频下载"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/courseDocListFontSize" />

</LinearLayout>