<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.broov.player.masgb.view.SlideMenu
        android:id="@+id/slide_menu3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include layout="@layout/layout_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <RelativeLayout
               		android:id="@+id/titlebar3"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/tabBbsHeightSize"
                    android:background="@drawable/bg_title_bar"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/imgTitleBack3"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="3.0dip"
                        android:layout_marginTop="3.0dip"
                        android:background="@drawable/slide_menu_click2"
                        android:clickable="true"
                        android:gravity="center"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/tvTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1.7dip"
                        android:layout_toRightOf="@+id/imgTitleBack3"
                        android:text="菜单"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/tabBbsFontSize" />

                    <TextView
                        android:id="@+id/tvName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="2.0dip"
                        android:text="学习计划"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/tabBbsFontSize" />
                </RelativeLayout>
          

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TabHost
                    android:id="@android:id/tabhost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </TabWidget>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >
                        </FrameLayout>
                    </LinearLayout>
                </TabHost>
            </LinearLayout>
        </LinearLayout>
    </com.broov.player.masgb.view.SlideMenu>

</LinearLayout>