<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCourseItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4.8"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="贯彻落实国家知识产权战略 "
        android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCoursePerson"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.3"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="秦玉保"
        android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />
    <!--
    <TextView
        android:id="@+id/tvCourseTime"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="2013-12-24" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />
    -->

    <TextView
        android:id="@+id/tvCourseTimeLength"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="75"
        android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCourseLength"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="83"
        android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCourseScore"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="1.5"
        android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/tvCourseType"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="选修"
        android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:id="@+id/btnCourseIn"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.9"
        android:background="@drawable/bg_login_button2"
        android:focusable="false"
        android:singleLine="true"
        android:text="进入课程"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/courseListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:id="@+id/btnCourseAsk"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.9"
        android:background="@drawable/bg_login_button2"
        android:focusable="false"
        android:singleLine="true"
        android:text="咨询答疑"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/courseListFontSize" />

</LinearLayout>