<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDocDownLoadItem"
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:background="#f5f5f5"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4.5"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/downViedoListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:progressDrawable="@drawable/barbgimg" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="0%"
        android:textSize="@dimen/downViedoListFontSize" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/bg_login_button2"
        android:focusable="false"
        android:singleLine="true"
        android:text="暂停"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/downViedoListFontSize"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/bg_login_button2"
        android:focusable="false"
        android:singleLine="true"
        android:text="继续"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/downViedoListFontSize"
        android:visibility="gone" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_curriculm_line_v" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/bg_login_button2"
        android:focusable="false"
        android:text="删除"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/downViedoListFontSize" />

</LinearLayout>